
// preset form values if we receive a userdata object //
- rule = typeof(ruleData) != 'undefined' ? ruleData : { }
// store the userId on the client side in a hidden input field //

.content
    .jumbotron.content-left
        h2 Update Rule
        form#updateResourceForm.form-horizontal(method='post', action='/ruleSave')
            .form-group
                label.col-lg-2.control-label Rule Number
                .col-lg-6
                    input.form-control(type='text', name='ruleNumber', value=rule.ruleNumber, disabled=true)
                    input.form-control(type='hidden', name='ruleNumber', value=rule.ruleNumber)
            .form-group
                label.col-lg-2.control-label Rule Name
                .col-lg-6
                    input.form-control(type='text', name='ruleName', value=rule.ruleName)
            .form-group
                label.col-lg-2.control-label UserID / DeviceID
                .col-lg-6
                    select.form-control(name='mappedId')
                        each mapId in mapIds
                            option(selected=mapId == rule.mappedId)= mapId
            .form-group
                label.col-lg-2.control-label Blockchain Id
                .col-lg-6
                    input#bcEID.form-control(type='text',name='blockChainId', disabled='')
                    input#bcEID1.form-control(type='hidden', name='blockChainId')							
            .form-group
                label.col-lg-2.control-label Resource IP
                .col-lg-6
                    select.form-control(name='resourceIp')
                        each resource in resourceIps
                            option(selected=resource == rule.resourceIp)= resource
            .form-group
                label.col-lg-2.control-label Access
                .col-lg-6
                    select.form-control(name='access')
                        each access in accessList
                            option(selected=access == rule.access)= access
            .form-group
                label.col-lg-2.control-label Comments
                .col-lg-6
                    input.form-control(type='text', name='comments', value=rule.comments)
            
            
            .form-group
                .col-lg-9.col-lg-offset-2
                    button#resourceCancel.btn.btn-default(type='button') Cancel
                    button.btn.btn-primary(type='submit', value='update') Update