
// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId

.content
    .jumbotron.content-left
        h3 Create user
        form#createUserForm.form-horizontal(method='post', action='/createUser')
            .form-group
                label.col-lg-2.control-label Full Name
                .col-lg-3
                    input.form-control(type='text', name='firstName', placeholder='First Name')
                .col-lg-3
                    input.form-control(type='text', name='lastName', placeholder='Last Name')
            .form-group
                label.col-lg-2.control-label User ID
                .col-lg-6
                    input.form-control(type='text', name='username')
            .form-group
                label.col-lg-2.control-label Password
                .col-lg-6
                    input.form-control(type='password', name='password')
            .form-group
                label.col-lg-2.control-label Confirm password
                .col-lg-6
                    input.form-control(type='password', name='confirmPassword')                    
            .form-group
                label.col-lg-2.control-label Biometric ID
                .col-lg-6
                    input.form-control(type='text', name='biometricId')
            .form-group
                label.col-lg-2.control-label Role
                .col-lg-6
                    select.form-control#role-list(name='role')
                        each role in roles
                            option(selected=role == user.role)= role
            .form-group
                label.col-lg-2.control-label Email ID
                .col-lg-6
                    input.form-control(type='text', name='email')
            .form-group
                label.col-lg-2.control-label Department
                .col-lg-6
                    input.form-control(type='text', name='department')
            .form-group
                label.col-lg-2.control-label User Description
                .col-lg-6
                    input.form-control(type='text', name='description')
            
            .form-group
                .col-lg-9.col-lg-offset-2
                    button.btn.btn-primary(type='submit', value='create') Create
